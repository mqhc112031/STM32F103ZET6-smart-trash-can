/* pages/my/my.wxss */
/**index.wxss**/
.root-wrapper {
  min-height: 100vh;
  overflow: hidden;
}

.header-wrapper {
  background: rgba(0, 0, 0, 0.6) no-repeat center center;
  background-blend-mode: multiply;
  height:40vh;
  color: #fff;
  /*box-shadow: #d6d6d6 0px 0px 5px;*/
  /*padding: 15px 30px;*/
}
.user-info{
  padding:120px  0 20px 0;
  display: flex;
  justify-content:space-around ;
  align-items: center;
}
.avatar-wrapper{
  height:70px;
  width:70px;
  border-radius: 50%;
  overflow: hidden;
}
.username-wrapper{
  font-size:36px;
}
.body-wrapper{
  box-sizing:border-box;
  padding:20px 15px 0 15px;
}
.list-wrapper{
  margin: 10px 0;
}
.list{
  border-radius: 25px;
  background-color:#2f2f2f;
  display: flex;
  justify-content: space-between;
  align-items:center;
  color:#fff;
  padding:10px 20px;
}
